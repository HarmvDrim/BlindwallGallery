<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harm.blindwallgallery.DetailActivity">

    <ImageView
        android:id="@+id/picture_id"
        android:layout_width="156dp"
        android:layout_height="158dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Naam"
        app:layout_constraintStart_toEndOf="@+id/picture_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/material_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Materiaal"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/picture_id"
        app:layout_constraintTop_toBottomOf="@+id/name_id" />

    <TextView
        android:id="@+id/address_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Adres"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/picture_id"
        app:layout_constraintTop_toBottomOf="@+id/material_id" />

    <TextView
        android:id="@+id/photograph_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="fotograaf"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/picture_id"
        app:layout_constraintTop_toBottomOf="@+id/address_id" />

    <TextView
        android:id="@+id/description_id"
        android:layout_width="558dp"
        android:layout_height="107dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="description"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture_id"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/addressNumber_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/address_id"
        app:layout_constraintTop_toTopOf="@+id/address_id" />
</android.support.constraint.ConstraintLayout>
